    private void Iniciar_sesionActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_Iniciar_sesionActionPerformed
        // TODO add your handling code here:
        //IVAN HERRERA GARCIA 19130535
        //SE CREA UN OBJETO DE TIPO PROPIERTIES
        Properties propiedad = new Properties();
        //SE COLOCAN PROPIEDADES PARA EL FUNCIONAMIENTO Y PODER ENLAZARCE CON GOOGLE (GMAIL)
        propiedad.setProperty("mail.smtp.host", "smtp.gmail.com");
        propiedad.setProperty("mail.smtp.starttls.enable", "true");
        propiedad.setProperty("mail.smtp.port", "587");
        
        //SE CREA UN OBJETO DEL TIPO SESSION
        Session sesion= Session.getDefaultInstance(propiedad);
        
        //SE CREA DOS VARIABLES DEL TIPO STRING EN LAS CUALES SE ALMACENARAN DATOS
        //     ALMACENA LA INFORMACION DE LA ETIQUETA CORREO
        String correoEnvia= mail.getText();
        //     ALMACENA LA INFORMACION DE LA ETIQUETA CONTRASEÃ‘A
        String contrasena= password.getText();
        
       
        try {
        //SE CREA UN OBJETO TRANSPORT PARA PODER ENVIAR LOS DATOS COMO UN CORREO
            //SE INICIALIZA EL OBJETO CON EL OBJETO SESION
            Transport transporte = sesion.getTransport("smtp");
            //SE CONECTA EL OBJETO TRANSPORTE CON GMAIL PARA REVISAR SI EXISTE LA CUENTA A USAR
            transporte.connect(correoEnvia,contrasena);
            //SE CIERRA LA CONEXION CON GMAIL
            transporte.close();
            //SE MANDA UN MENSAJE PARA ASEGURAR LA CONEXION AL USUARIO
            JOptionPane.showMessageDialog(null, "CONEXION CORRECTA","Informacion",JOptionPane.INFORMATION_MESSAGE);
            //SE CREA UN OBJETO EL CUAL ES TIPO PANEL (JFRAME)
            Panel v = new Panel(this);
            //SE OCULTA A LA VISTA EL JFRAME DE INICIO DE SESION
            this.setVisible(false);
            //SE VISUALIZA EL JFRAME LLAMADO V
            v.setVisible(true);
            
        } catch (NoSuchProviderException ex) {
            //MANDA UN MENSAJE EN LA CONSOLA EN CASO DE OCURRIR ALGUN ERROR
            Logger.getLogger(Inicio.class.getName()).log(Level.SEVERE, null, ex);
        } catch (MessagingException ex) {
            //MANDA UN MENSAJE VISUAL EN CASO DE OCURRIR ALGUN ERROR
            JOptionPane.showMessageDialog(null, "NO SE PUDO ESTABLECER EL CONTACTO CON EL SERVICIO DE MENSAJERIA","Informacion",JOptionPane.ERROR_MESSAGE);
        }
            
        
    }//GEN-LAST:event_Iniciar_sesionActionPerformed


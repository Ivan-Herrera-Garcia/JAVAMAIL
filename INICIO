    private void mailKeyPressed(java.awt.event.KeyEvent evt) {//GEN-FIRST:event_mailKeyPressed
        // TODO add your handling code here:
        //SE CREA UNA CONDICION PARA HACER USO DEL TECLADO, EN EL CUAL SI SE PRESIONA ENTER SE PASARA AL SIGUENTE JTEXTBOX O BOTON
        if (evt.getKeyCode()==evt.VK_ENTER) {
            password.requestFocus();
        }
    }//GEN-LAST:event_mailKeyPressed

    private void passwordKeyPressed(java.awt.event.KeyEvent evt) {//GEN-FIRST:event_passwordKeyPressed
        // TODO add your handling code here:
        //SE CREA UNA CONDICION PARA HACER USO DEL TECLADO, EN EL CUAL SI SE PRESIONA ENTER SE PASARA AL SIGUENTE JTEXTBOX O BOTON
        if (evt.getKeyCode()==evt.VK_ENTER) {
            Iniciar_sesion.requestFocus(true);
        }
    }//GEN-LAST:event_passwordKeyPressed

